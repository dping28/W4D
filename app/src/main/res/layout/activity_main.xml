<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:background="@drawable/bluenavy">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Inventory"
        android:id="@+id/btn_Inventory"
        android:width="165dp"
        android:background="@android:drawable/btn_default"
        android:onClick="openInventoryActivity"
        android:layout_marginTop="45dp"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ShoppingList"
        android:id="@+id/btn_ShoppingList"
        android:width="165dp"
        android:background="@android:drawable/btn_default"
        android:layout_marginTop="50dp"
        android:onClick="openShoppingListActivity"
        android:layout_below="@+id/btn_Inventory"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Recipes"
        android:id="@+id/btn_Recipes"
        android:width="165dp"
        android:background="@android:drawable/btn_default"
        android:layout_marginTop="50dp"
        android:onClick="openRecipesActivity"
        android:layout_below="@+id/btn_ShoppingList"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/btn_ShoppingList"
        android:layout_alignStart="@+id/btn_ShoppingList" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ScheduledMeals"
        android:id="@+id/btn_ScheduledMeals"
        android:width="165dp"
        android:background="@android:drawable/btn_default"
        android:layout_marginTop="50dp"
        android:onClick="openScheduledMealsActivity"
        android:layout_below="@+id/btn_Recipes"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
